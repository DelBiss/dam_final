<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    >

    <data>
        <import type="android.view.View"/>
        <variable
            name="action"
            type="com.colibri.appconnect.userprofile.ActionButtonBinding" />
    </data>
    <androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:onClick="@{action::onClick}"
    app:cardBackgroundColor="@{action.highlighted ?  @color/design_default_color_secondary : @color/design_default_color_surface}"
    app:cardCornerRadius="12dp"
    app:cardElevation="0dp"
        android:visibility="@{action != null ? View.VISIBLE : View.GONE}"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingHorizontal="16dp"
        android:paddingVertical="8dp">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="16dp"
            android:padding="6dp"

            app:imageDrawable="@{action.icon}"
            app:tint="@color/design_default_color_on_secondary"
            tools:ignore="ContentDescription"
            tools:srcCompat="@android:drawable/ic_menu_help" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{action.label}"

            android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
            android:textColor="@color/design_default_color_on_secondary"
            tools:text="button_text" />
    </LinearLayout>
</androidx.cardview.widget.CardView></layout>