<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:bind="http://schemas.android.com/apk/res-auto"
    tools:context=".userprofile.ProfilFragment">


    <data>
        <import type="android.view.View"/>
        <variable
            name="userProfile"
            type="com.colibri.appconnect.userprofile.SharedUserProfileViewModel" />
        <variable
            name="action1"
            type="com.colibri.appconnect.userprofile.ActionButtonBinding" />
        <variable
            name="action2"
            type="com.colibri.appconnect.userprofile.ActionButtonBinding" />
        <variable
            name="action3"
            type="com.colibri.appconnect.userprofile.ActionButtonBinding" />
        <variable
            name="isLoading"
            type="Boolean" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout

        android:background="#E2E2E2" android:layout_height="match_parent" android:layout_width="match_parent">



        <include
            android:id="@+id/include"
            layout="@layout/profile_view_layout"
            bind:userProfile="@{userProfile.userProfile}"
            bind:action1="@{action1}"
            bind:action2="@{action2}"
            bind:action3="@{action3}"
            android:visibility="@{userProfile.isLoading?View.GONE:View.VISIBLE}"
            />

        <ProgressBar
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="@{userProfile.isLoading?View.VISIBLE:View.GONE}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>